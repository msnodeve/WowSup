<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="#ffffff"
        android:gravity="center|left"
        android:orientation="vertical"
        android:paddingLeft="13dp">

        <ImageView
            android:id="@+id/lostinfo_ibtn_back"
            android:layout_width="14dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/back_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lostinfo_img"
                android:layout_width="136dp"
                android:layout_height="175dp"
                android:src="@drawable/logo_540" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/hanmaumgodic_b"
                android:gravity="center"
                android:text="Lost ID / Password"
                android:textColor="#808183"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lostinfo_layout_id_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/id_tab_block"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/hanmaumgodic_m"
                        android:text="Find ID"
                        android:textSize="15.3sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lostinfo_ibtn_id"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        app:srcCompat="@drawable/tab_down_button" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lostinfo_layout_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    app:mtf_backgroundColor="#808183"
                    app:mtf_image="@drawable/mail_icon"
                    app:mtf_labelColor="#808183">

                    <EditText
                        android:id="@+id/lostinfo_edit_id_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Write your E-mail"
                        android:textColor="#f0f4f4"
                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField>

                <Button
                    android:id="@+id/lostinfo_btn_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/short_button"
                    android:text="Send Mail"
                    android:textColor="#808183"
                    android:textSize="17sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lostinfo_layout_pw_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/id_tab_block"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Find Password"
                        android:textSize="15.3sp"
                        android:fontFamily="@font/hanmaumgodic_m"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center|right"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lostinfo_ibtn_pw"
                        android:layout_width="20dp"
                        android:layout_height="17dp"
                        android:layout_marginRight="18dp"
                        app:srcCompat="@drawable/tab_down_button" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lostinfo_layout_pw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical"
                android:visibility="gone">

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    app:mtf_backgroundColor="#808183"
                    app:mtf_image="@drawable/id_icon"
                    app:mtf_labelColor="#808183">

                    <EditText
                        android:id="@+id/lostinfo_edit_pw_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Write your ID"
                        android:singleLine="true"
                        android:textColor="#f0f4f4"
                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField>

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    app:mtf_backgroundColor="#808183"
                    app:mtf_image="@drawable/mail_icon"
                    app:mtf_labelColor="#808183">

                    <EditText
                        android:id="@+id/lostinfo_edit_pw_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Write your E-mail"
                        android:singleLine="true"
                        android:textColor="#f0f4f4"
                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField>

                <Button
                    android:id="@+id/lostinfo_btn_pw"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/short_button"
                    android:text="Send Mail"
                    android:textColor="#808183" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>