<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/card_notice_txt_fnick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanmaumgodic_m"
            android:text="SupPeople"
            android:textColor="#808183"
            android:textSize="15.3sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanmaumgodic_m"
            android:text=" has applied for a friend."
            android:textColor="#808183"
            android:textSize="15.3sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanmaumgodic_m"
            android:text="Intro : "
            android:textColor="#808183"
            android:textSize="15.3sp" />

        <TextView
            android:id="@+id/card_notice_txt_finfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanmaumgodic_m"
            android:textColor="#808183"
            android:textSize="15.3sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/hanmaumgodic_m"
        android:text="Do you want to accept?"
        android:textColor="#808183"
        android:textSize="15.3sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/card_notice_btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/yes_button"
            android:fontFamily="@font/hanmaumgodic_m"
            android:text="YES"
            android:textColor="#808183"
            android:textSize="15.3sp" />

        <Button
            android:id="@+id/card_notice_btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/no_button"
            android:fontFamily="@font/hanmaumgodic_m"
            android:text="NO"
            android:textColor="#808183"
            android:textSize="15.3sp" />

    </LinearLayout>
</LinearLayout>