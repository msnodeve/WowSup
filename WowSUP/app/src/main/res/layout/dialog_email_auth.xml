<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wowSupBackground"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/hanmaumgodic_b"
        android:text="Authenticate your email"
        android:textColor="@color/wowSupDark"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/auth_edt_num"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/hanmaumgodic_m"
        android:hint="Please register your certification number"
        android:paddingLeft="10dp"
        android:textColor="@color/wowSupDark"
        android:textSize="14sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:fontFamily="@font/hanmaumgodic_m"
        android:text="Please include the verification number sent to you by email"
        android:textColor="@color/wowSupDark" />

    <TextView
        android:id="@+id/auth_txt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/hanmaumgodic_m"
        android:gravity="center"
        android:text="5:00"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/auth_btn_over"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_short"
        android:fontFamily="@font/hanmaumgodic_m"
        android:text="OverLap"
        android:textColor="@color/wowSupDark"
        android:textSize="18sp" />

</LinearLayout>